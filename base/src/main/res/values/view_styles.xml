<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EmptyListTextStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/empty_list_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="RetryTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/retry_text_size</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InternetConnectionTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/internet_connection_text_size</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>